<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:barrierDirection="top">

    <LinearLayout
        android:id="@+id/goLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:clipChildren="true"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setLayout">

        <TextView
            android:id="@+id/goTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"
            android:text="GO"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/goDesc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="61"
            android:text="Know What to do when Wildfire Strikes"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/goProg"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:clipChildren="true"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readyLayout">

        <TextView
            android:id="@+id/setTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"
            android:text="SET"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/setDesc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="61"
            android:text="Get Prepared and Create Your Wildfire Action Plan"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/setProg"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/readyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:clipChildren="true"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getSetDescription"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/readyTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="24"
            android:text="READY"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/readyDesc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="61"
            android:text="Maintain Defensible Space and Harden Your Home"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/readyProg"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15" />

    </LinearLayout>

    <TextView
        android:id="@+id/getSetDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete the checklists below to help prepare your family, home and property for a wildfire. Then track your progress with the preparedness meter"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>